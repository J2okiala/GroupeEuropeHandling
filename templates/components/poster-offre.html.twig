<style>
    /* Style pour l'image en fond */
    .container-form-page {
        height: 110vh; /* Hauteur complète de la fenêtre */
        background-image: url('/img/Trafic.webp'); /* Image de fond */
        background-size: cover; /* L'image couvre tout l'espace */
        background-position: center; /* Centre l'image */
        background-repeat: no-repeat; /* Pas de répétition */
        display: flex; /* Utilisation de flexbox */
        align-items: center; /* Centre verticalement */
        justify-content: center; /* Centre horizontalement */
    }

    /* Style pour le formulaire */
    .form-container {
        background-color: linear-gradient(88.96deg, #051039 33.47%, #003165 99.14%); /* Fond semi-transparent */
        padding: 30px; /* Espacement intérieur */
        border-radius: 8px; /* Coins arrondis */
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 1); /* Ombre légère */
        width: 100%; /* Largeur relative */
        max-width: 600px; /* Largeur maximale pour le formulaire */
        opacity: 1;
    }

    /* Espacement des champs */
    .form-container .form-control,
    .form-container .btn {
        margin-bottom: 15px; /* Espacement entre les champs */
    }
</style>
<!-- formulaire pour postez une offre -->
<section class="container-form-page">
    <!-- Boîte contenant le formulaire -->
    <div class="form-container">
        <h3 class="text-center mb-2">Publier une Offre d'Emploi</h3> <!-- Titre centré -->

        {{ form_start(formPoster, {'action': path('poster-offre-emploi'), 'method': 'POST', 'attr': {'onsubmit': "return confirm('Êtes-vous sûr de vouloir poster cette offre ?');"} }) }}
            <div class="row g-4 mb-2">
                <div class="col-md-5">
                    {{ form_row(formPoster.poste, {'attr': {'class': 'form-control', 'placeholder': 'Intitulé du poste'}}) }}
                </div>
                <div class="col-md-5">
                    {{ form_row(formPoster.typeContrat, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-8">
                    {{ form_row(formPoster.descriptionPoste, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Description du poste'}}) }}
                </div>
                <div class="col-md-5">
                    {{ form_row(formPoster.modaliteTravail, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-5">
                    {{ form_row(formPoster.localisation, {'attr': {'class': 'form-control', 'placeholder': 'Lieu de travail'}}) }}
                </div>
            </div>
            {{ form_end(formPoster) }}
    </div>
</section>
