{% extends 'pages/base.html.twig' %}

{% block title %}Candidature Spontanée{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="styles/offres.css">
{% endblock %}

{% block body %}

    {# Affiche les messages flash s'ils existent #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}
    
<div class="container mt-5">

    <div class="card shadow">
        <div class="card-body">
            <h2 class="text-dark font-weight-semibold mb-4 text-center">Candidature Spontanée</h2>

            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            
            <div class="mb-5">
                {{ form_label(form.cv, 'Votre CV (PDF)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.cv, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.cv) }}
            </div>

            <div class="mb-5">
                {{ form_label(form.lm, 'Votre Lettre de Motivation (PDF)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.lm, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.lm) }}
            </div>

            <div class="mb-5">
                {{ form_label(form.poste, 'Poste souhaité', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.poste, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.poste) }}
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">
                    Envoyer ma candidature
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

</div>
{% endblock %}
