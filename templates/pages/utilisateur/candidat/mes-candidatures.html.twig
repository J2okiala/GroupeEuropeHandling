{% extends 'pages/base.html.twig' %}

{% block title %}
    MesCandidatures - candidat
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="styles/offres.css">
    <style>
        .imagebackgroundCandidat {
        height: 110vh; /* Hauteur complète de la fenêtre */
        background-image: url('/img/IMG_5589.jpg'); /* Image de fond pour le formulaire*/
        background-size: cover; /* L'image couvre tout l'espace */
        background-position: center; /* Centre l'image */
        background-repeat: no-repeat; /* Pas de répétition */
        display: flex; /* Utilisation de flexbox */
        align-items: center; /* Centre verticalement */
        justify-content: center; /* Centre horizontalement */
        }       
    </style>
{% endblock %}

{% block body %}
    {# Affiche les messages flash s'ils existent #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <main class="container">
        <h2 class="text-white mb-4">Mes Candidatures</h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-2 g-4">
            {# Vérifie si l'utilisateur postulées a des offres #}
            {% if offresPostulees is not empty %}
                {% for offre in offresPostulees %}
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <h4 class="card-title">Votre candidature</h4>
                                <p class="card-text">
                                    <strong>Poste :</strong> {{ offre.poste }} <br>
                                    <strong>Type de contrat :</strong> {{ offre.typeContrat }} <br>
                                    <strong>Localisation :</strong> {{ offre.localisation }} <br>
                                    <strong>Date de publication :</strong> {{ offre.datePublication|date('d/m/Y') }} <br>
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p>Vous avez postulée a aucune offre.</p>
            {% endif %}
        </div>
    </main>
{% endblock %}