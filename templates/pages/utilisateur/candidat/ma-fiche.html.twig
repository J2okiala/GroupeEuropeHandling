{% extends 'pages/base.html.twig' %}

{% block title %}
    Page de maFiche-candidat
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="styles/offres.css">
{% endblock %}

{% block body %}

    <main class="container">
    <h4 class=" font-weight-semibold mb-4 text-center">Ma fiche candidat </h4>
            <!-- Cartes -->
            <div class"bordure m-2">
                <h3>Identité</h3>
                <p>Civilité: {{ app.user.civilite }}</p>
                <p>Nom: {{ app.user.nom }}</p>
                <p>Prenom: {{ app.user.prenom }}</p>
            </div>

            <div class"bordure m-2">
                <h3>Information personnelles</h3>
                <p>Nationalité:</p>
                <p>Date de naissance:</p>
                <p>Telephone:</p>
            </div>

            <div class"bordure m-2">
                <h3>Poste recherché</h3>
                <p>Poste:</p>
                <p>Date de disponibilité:</p>
            </div>         

            <div class"bordure  m-2">
                <h3>Mes pièces jointes</h3>
                <p>Cv:</p>
                <p>Lettre de motivation:</p>
                <p><a href="{{ path('modifierMesInformations') }}">Modifier mes informations</a></p>
            </div>

    </main>




{% endblock %}