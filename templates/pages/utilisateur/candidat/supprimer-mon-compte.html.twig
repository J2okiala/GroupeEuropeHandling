{% extends 'pages/base.html.twig' %}

{% block title %}
    SupprimerMonCompte - candidat
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="styles/offres.css">
    <style>
        .imagebackgroundCandidat {
            height: 110vh; /* Hauteur complète de la fenêtre */
            background-image: url('/img/IMG_5589.jpg'); /* Image de fond pour le formulaire*/
            background-size: cover; /* L'image couvre tout l'espace */
            background-position: center; /* Centre l'image */
            background-repeat: no-repeat; /* Pas de répétition */
            display: flex; /* Utilisation de flexbox */
            align-items: center; /* Centre verticalement */
            justify-content: center; /* Centre horizontalement */
        }       
    </style>
{% endblock %}

{% block body %}
    {# Affiche les messages flash s'ils existent #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <main class="container mt-5">
        <h2 class="text-center text-white mb-4">Supprimer mon compte</h2>
        <div class="row justify-content-center">
            <!-- Carte de suppression -->
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h4>Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.</h4>
                        <form method="POST" action="{{ path('confirmer_compte') }}">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete_account') }}">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.');">Oui, supprimer mon compte</button>
                            <a href="{{ path('profilCandidat') }}" class="btn btn-secondary">Annuler</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}




