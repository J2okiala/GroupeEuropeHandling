    <div class="mb-3">
        {{ form_row(form.modaliteTravail, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.localisation, {'attr': {'class': 'form-control'}}) }}
    </div>
    <button type="submit" class="btn btn-success w-100">
        {{ form.Postez.vars.label }}
    </button>
    {{ form_end(form) }}
{% else %}
    <p>Le formulaire n'est pas disponible.</p>
{% endif %}


