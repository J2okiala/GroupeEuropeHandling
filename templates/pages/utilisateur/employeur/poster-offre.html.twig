{% block title %}Poster une offre{% endblock %}

{% block body %}

{% if form is not null %}

    {{ form_start(form) }}
    <div class="mb-3">
        {{ form_row(form.poste, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.typeContrat, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_row(form.descriptionPoste, {'attr': {'class': 'form-control', 'rows': 5}}) }}
