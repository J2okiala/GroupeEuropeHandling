{% extends 'pages/base.html.twig' %}

{% block title %}
    maFiche - employeur
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="styles/offres.css">
{% endblock %}

{% block body %}
    {# Affiche les messages flash s'ils existent #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <main class="container">
    <h4 class=" font-weight-semibold mb-4 text-center">Ma fiche employeur </h4>
            <!-- Cartes -->
            <div class"bordure m-2">
                <h3>Identité</h3>
                <p>Civilité: {{ app.user.civilite }}</p>
                <p>Nom: {{ app.user.nom }}</p>
                <p>Prenom: {{ app.user.prenom }}</p>
            </div>

            <div class"bordure m-2">
                <h3>Information profesionnelles</h3>
                <p>Entreprise: {{ app.user.getEmployeur.Entreprise}}</p>
                <p><a href="{{ path('modifierMesInformationsE', {'id': app.user.employeur.id}) }}">Modifier mes informations</a></p>
            </div>

    </main>




{% endblock %}