{% extends 'pages/base.html.twig' %}

{% block title %}
    Page Profil - employeur
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="styles/offres.css">
    <style>
        /* Style pour l'image en fond */
        .container-form-page {
            height: 110vh; /* Hauteur complète de la fenêtre */
            background-image: url('/img/Trafic.webp'); /* Image de fond */
            background-size: cover; /* L'image couvre tout l'espace */
            background-position: center; /* Centre l'image */
            background-repeat: no-repeat; /* Pas de répétition */
            display: flex; /* Utilisation de flexbox */
            align-items: center; /* Centre verticalement */
            justify-content: center; /* Centre horizontalement */
        }

        /* Style pour le formulaire */
        .form-container {
            background: linear-gradient(88.96deg, #051039 33.47%, #003165 99.14%); /* Fond semi-transparent */
            padding: 30px; /* Espacement intérieur */
            border-radius: 8px; /* Coins arrondis */
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 1); /* Ombre légère */
            width: 100%; /* Largeur relative */
            max-width: 600px; /* Largeur maximale pour le formulaire */
            opacity: 1;
        }

        /* Espacement des champs */
        .form-container .form-control,
        .form-container .btn {
            margin-bottom: 15px; /* Espacement entre les champs */
        }
    </style>
{% endblock %}

{% block body %}
    {# Affiche les messages flash s'ils existent #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <main class="container">
        <h3 class=" font-weight-semibold mb-4 text-center">Bienvenue sur votre espace employeur {{ app.user.prenom }} ! </h3>
        <!-- Cartes -->
        <section class="row row-cols-1 row-cols-md-2 row-cols-lg-3 d-flex">
            <div class="col m-4"><a href="{{ path('maFicheE') }}">
                <h4>Ma Fiche Employeur</h4>
                <img src="img/ma-fiche.png" alt="MaFiche" class="img-fluid"></a>
            </div>
            <div class="col m-4 ms-auto"><a href="{{ path('modifierMesInformationsE', {'id': app.user.employeur.id}) }}">
                <h4>Modifier Mes Informations</h4>
                <img src="img/modifier-mes-infos.png" alt="ModifierMesInformations" class="img-fluid"></a>
            </div>
            <div class="col m-4"><a href="{{ path('mesOffresE') }}">
                <h4>Visualiser Mes Offres</h4>
                <img src="img/Mes-Candidatures.png" alt="MesOffres" class="img-fluid"></a>
            </div>
            <div class="col m-4 ms-auto"><a href="{{ path('filtrer_candidatures') }}">
                <h4>Candidatures Spontanés</h4>
                <img src="img/alerte.png" alt="MesAlertes" class="img-fluid"></a>
            </div>
            <div class="col m-4"><a href="{{ path('mesIdentifiantsDeConnexionE') }}">
                <h4>Modifier Mes Identifiants</h4>
                <img src="img/Modifier-Mes-Piece-Jointes.png" alt="ModifierMesIdentifiants" class="img-fluid"></a>
            </div>
            <div class="col m-4 ms-auto"><a href="{{ path('supprimer-compteE') }}">
                <h4>Supprimer Mon Compte</h4>
                <img src="img/desactivez-mon-compte.png" alt="SupprimerMonCompte" class="img-fluid"></a>
            </div>
        </section>
    </main>
{% endblock %}