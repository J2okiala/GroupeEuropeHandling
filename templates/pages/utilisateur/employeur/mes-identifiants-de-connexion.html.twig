{% extends 'pages/base.html.twig' %}

{% block title %}
    MesIdentifiants - employeur
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="styles/offres.css">
    <style>
        .imagebackgroundEmployeur {
            height: 110vh; /* Hauteur complète de la fenêtre */
            background-image: url('/img/IMG_5589.jpg'); /* Image de fond */
            background-size: cover; /* L'image couvre tout l'espace */
            background-position: center; /* Centre l'image */
            background-repeat: no-repeat; /* Pas de répétition */
            display: flex; /* Utilisation de flexbox */
            align-items: center; /* Centre verticalement */
            justify-content: center; /* Centre horizontalement */
        }
    </style>
{% endblock %}

{% block body %}
    {# Affiche les messages flash s'ils existent #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <main class="container mt-5">
        <h2 class="text-center text-white mb-4">Modifier Mes Identifiants</h2>
        <div class="row justify-content-center">
            <!-- Carte des identifiants -->
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        {{ form_start(form) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.confirmEmail) }}
                            {{ form_row(form.password) }}
                            {{ form_row(form.confirmPassword) }}
                            <button type="submit">Valider</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}


