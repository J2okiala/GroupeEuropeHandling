{% extends 'pages/base.html.twig' %}

{% block title %}
    Supprimer le compte - employeur
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="styles/offres.css">
{% endblock %}


{% block body %}
    {# Affiche les messages flash s'ils existent #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

<h1>Supprimer mon compte</h1>
<p>Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.</p>

<form method="POST" action="{{ path('confirmer_suppression-compteE') }}">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete_account') }}">
    <button type="submit" class="btn btn-danger">Oui, supprimer mon compte</button>
    <a href="{{ path('profilEmployeur') }}" class="btn btn-secondary">Annuler</a>
</form>


{% endblock %}





